@model List<WA_06_CoreAndFood.Data.Models.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Category List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Status</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Name</td>
            <td>@x.Status</td>
            <td><a href="/Category/CategoryGet/@x.ID" class="btn btn-success">Update</a></td>
            <td><a href="/Category/CategoryDelete/@x.ID" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
<a href="/Category/CategoryAdd" class="btn btn-primary">New Category</a>